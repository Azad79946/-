<script>

let stage=1;
const scene=document.getElementById("scene");
const boy=document.getElementById("boy");
const girl=document.getElementById("girl");
const text=document.getElementById("text");
const finalText=document.getElementById("finalText");

function yesClicked(){
 if(stage===1){
   text.innerText="Accha baba sorry naaaâ€¦ galti ho gayi meri ðŸ˜”";
   sendProjectileKiss();
   setTimeout(()=>{
     text.innerText="Ab maan jao naâ€¦";
     stage=2;
   },1800);
 }
 else{
   celebrate();
 }
}

function noClicked(){
 if(stage===1){
   celebrate();
 } else{
   text.innerText="Please naaaâ€¦ zyada nakhre mat karo ðŸ¥º";
   sendProjectileKiss();
 }
}

function sendProjectileKiss(){

 let kiss=document.createElement("div");
 kiss.classList.add("kiss");
 kiss.innerText="ðŸ˜˜";
 scene.appendChild(kiss);

 let startX=scene.offsetWidth*0.80;
 let endX=scene.offsetWidth*0.10;
 let startY=160;
 let peak=60;
 let duration=1000;
 let startTime=null;

 function animate(time){
   if(!startTime) startTime=time;
   let progress=(time-startTime)/duration;
   if(progress>1) progress=1;

   let x=startX+(endX-startX)*progress;
   let y=startY - peak*4*progress*(1-progress);

   kiss.style.left=x+"px";
   kiss.style.top=y+"px";

   if(Math.random()>0.7){
     let trail=document.createElement("div");
     trail.classList.add("trail");
     trail.innerText="ðŸ’—";
     trail.style.left=x+"px";
     trail.style.top=y+"px";
     scene.appendChild(trail);
     setTimeout(()=>trail.remove(),600);
   }

   if(progress<1){
     requestAnimationFrame(animate);
   } else{
     kiss.remove();
   }
 }

 requestAnimationFrame(animate);
}

function celebrate(){

 text.innerText="Sach me maan gayi? ðŸ¥¹";

 boy.classList.add("mergeBoy");
 girl.classList.add("mergeGirl");

 document.querySelector(".buttons").style.display="none";

 for(let i=0;i<40;i++){
   let h=document.createElement("div");
   h.classList.add("heart");
   h.innerText="ðŸ’–";
   h.style.left=Math.random()*100+"vw";
   h.style.bottom="0px";
   document.body.appendChild(h);
 }

 setTimeout(()=>{
   finalText.classList.add("showLove");
 },2000);
}

</script>

